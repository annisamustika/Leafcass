<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarBacterialBlight"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#D2B48C"
        android:title="Bacterial Blight"
        android:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/arrow_back"
        app:navigationIconTint="@android:color/white" />

    <!-- Konten -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="@android:color/white">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Gambar -->
            <ImageView
                android:id="@+id/imageViewBacterialBlight"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bacterialblight984_"
                android:contentDescription="Gambar penyakit bacterial blight" />

            <!-- Judul -->
            <TextView
                android:id="@+id/judulPenyakit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bacterial Blight"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingVertical="16dp" />

            <!-- Section: Penjelasan -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#EFDECD">

                    <TextView
                        android:text="Penjelasan"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingBottom="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/penjelasan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bacterial Blight adalah penyakit yang disebabkan oleh bakteri Xanthomonas axonopodis pv. manihotis, menyerang daun, batang, dan kadang akar tanaman singkong."
                        android:textSize="16sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Section: Gejala -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#EFDECD">

                    <TextView
                        android:text="Gejala"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingBottom="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/gejala"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gejala yang muncul berupa bercak cokelat tua berbentuk sudut pada daun, yang lama-kelamaan menyebabkan daun layu dan gugur. Selain itu, batang tanaman bisa menunjukkan luka berwarna hitam, dan jika dipotong, sering kali mengeluarkan lendir."
                        android:textSize="16sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Section: Pengendalian -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#EFDECD">

                    <TextView
                        android:text="Pengendalian"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingBottom="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/pengendalian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- Gunakan bibit sehat dan tahan penyakit.\n- Lakukan rotasi tanaman.\n- Singkirkan tanaman yang terinfeksi.\n- Hindari kelembaban tinggi di sekitar tanaman.\n- Semprotkan bakterisida sesuai dosis."
                        android:textSize="16sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
